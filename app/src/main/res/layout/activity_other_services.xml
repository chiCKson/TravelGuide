<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherServicesActivity">

    <Button
        android:id="@+id/weather_btn"
        android:layout_width="120dp"
        android:layout_height="88dp"
        android:layout_marginBottom="29dp"
        android:layout_marginEnd="132dp"
        android:layout_marginLeft="132dp"
        android:layout_marginRight="132dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="74dp"
        android:text="Weather"
        android:background="@drawable/my_btn"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/currency_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/currency_btn"
        android:layout_width="120dp"
        android:layout_height="88dp"
        android:layout_marginBottom="263dp"
        android:layout_marginEnd="132dp"
        android:layout_marginLeft="132dp"
        android:layout_marginRight="132dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="29dp"
        android:text="Currency"
        android:background="@drawable/my_btn"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_btn" />
</android.support.constraint.ConstraintLayout>