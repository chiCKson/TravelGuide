<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity" >

    <Button
        android:id="@+id/end_loc"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Select Desitination"
        android:textColor="@color/colorAccent"

        android:background="@drawable/my_btn"
        android:layout_gravity="center|top"

        android:layout_marginTop="60dp"
        />
    <Button
        android:id="@+id/start_loc"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Select Start location"
        android:textColor="@color/colorAccent"

        android:background="@drawable/my_btn"
        android:layout_gravity="center|top"

        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/near_place"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Find places near your route"
        android:textColor="@color/colorAccent"

        android:background="@drawable/my_btn"
        android:layout_gravity="center|bottom"

        android:layout_marginBottom="10dp"
        />
</fragment>