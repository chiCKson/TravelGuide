<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSelectorActivity"
    android:background="@drawable/login_bkg">

    <Button
        android:id="@+id/mobile_login_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="108dp"
        android:text="Mobile Login"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/my_btn"
        android:drawableLeft="@drawable/ic_phone_android_black_24dp"
        android:paddingLeft="30dip"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="356dp" />

    <Button
        android:id="@+id/email_login_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:text="Email Login"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/my_btn"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:paddingLeft="30dip"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="411dp" />
</RelativeLayout>